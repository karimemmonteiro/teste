generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             Int    @id @default(autoincrement())
  cpf            String @unique
  senha          String
  token          String
  refreshToken   String
  idSistema      Int
  statusResponse Int
  textResponse   String
}

//Tabelas de cadastro atendimento

model Cliente {
  id             Int      @id @default(autoincrement())
  //dados Pessoa Fisica
  cpf            String   @unique
  nome           String
  dataNascimento String
  produtorRural  Boolean
  estudante      Boolean
  lgpd           Boolean?

  Atendimento Atendimento[]
  Pfpj        Pfpj[]
  Telefone    Telefone[]
  Email       Email[]
  Endereco    Endereco[]
}

model Atendimento {
  id               Int           @id @default(autoincrement())
  cliente          Cliente       @relation(fields: [clienteId], references: [id])
  clienteId        Int
  // dados atendimento
  status           String
  funoIfAtendente  String
  atendente        String
  tempoAtendimento String
  projetoAcao      String
  tipoAtendimento  String
  canalAtendimento String
  descricao        String
  pendencias       String
  TemaSubtema      TemaSubtema[]
}

model TemaSubtema {
  id            Int         @id @default(autoincrement())
  Atendimento   Atendimento @relation(fields: [atendimentoId], references: [id])
  atendimentoId Int
  tema          String
  codTema       String
  subTema       String
  codSubTema    String
}

model Pfpj {
  id                     Int     @id @default(autoincrement())
  cliente                Cliente @relation(fields: [clienteId], references: [id])
  clienteId              Int
  // Dados PJ
  razaoSocial            String
  cnpj                   String
  nomeFantasia           String
  dataCriacaoRelatorio   String
  descricaoStatusReceita String
  descPorte              String
  quantidadeFuncionarios Int
  descNaturezaJuridica   String
  atividade              String
}

model Telefone {
  id               Int     @id @default(autoincrement())
  cliente          Cliente @relation(fields: [clienteId], references: [id])
  clienteId        Int
  // Dados Telefone
  codComunic       Int
  descComunic      String
  numero           String
  recebeContato    Int?
  recebeSMS        Int?
  principal        Int?
  autorizaLigacao  Int?
  autorizaMensagem Int?
}

model Email {
  id               Int     @id @default(autoincrement())
  cliente          Cliente @relation(fields: [clienteId], references: [id])
  clienteId        Int
  // Dados Email
  codComunic       Int
  descComunic      String
  numero           String
  recebeContato    Int?
  recebeSMS        Int?
  principal        Int
  autorizaLigacao  Int?
  autorizaMensagem Int?
}

model Endereco {
  id                      Int      @id @default(autoincrement())
  cliente                 Cliente  @relation(fields: [clienteId], references: [id])
  clienteId               Int
  // Dados Endere√ßo
  descEndereco            String
  numero                  String
  complemento             String?
  codBairro               Int?
  descBairro              String
  codCid                  Int?
  descCid                 String
  codEst                  Int?
  descEst                 String
  codPais                 Int?
  descPais                String
  cep                     Int
  principal               Int
  autorizaCorrespondencia Boolean?
}
